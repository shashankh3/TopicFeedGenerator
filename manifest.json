{
  "manifest_version": 3,
  "name": "YouTube Topic Feed",
  "version": "7.7.0",
  "description": "Generate personalized YouTube feeds based on your topics. Clean, professional, and seamless integration with YouTube's interface.",
  
  "permissions": [
    "storage",
    "activeTab", 
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Topic Feed Dashboard",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  
  "minimum_chrome_version": "96"
}
